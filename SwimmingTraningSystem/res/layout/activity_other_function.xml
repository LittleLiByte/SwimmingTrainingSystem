<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/others_headbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3D8BFF" >

        <TextView
            android:id="@+id/others_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="小功能"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/others_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:onClick="othersGetBack"
            android:src="@drawable/btn_back" />
    </RelativeLayout>

    <include
        android:id="@+id/function_clock_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_timer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a2a2a2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_2"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv01"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择计时用途"
                android:textColor="@color/aliceblue"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spn_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv01" />

            <Button
                android:id="@+id/fuction_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_register"
                android:padding="10dp"
                android:text="重置" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv02"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="请选择运动员"
                android:textColor="@color/aliceblue"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/spn_athlete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv02" />

            <Button
                android:id="@+id/fuction_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_login"
                android:padding="10dp"
                android:text="保存" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>