<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clock_main_bg" >

    <RelativeLayout
        android:id="@+id/plan_headbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#3D8BFF" >

        <TextView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="第一次计时"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/regist_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:onClick="back"
            android:src="@drawable/btn_back" />

        <Button
            android:id="@+id/resetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_reset"
            android:onClick="reset"
            android:padding="10dp"
            android:text="重  置" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clcokview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plan_headbar" >

        <ImageView
            android:id="@+id/duocimin_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/min_dial" />

        <ImageView
            android:id="@+id/duocimin_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/min_progress"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/duocimin_progress_hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/min_progress_hand" />

        <TextView
            android:id="@+id/duocitvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="00分00秒000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/duocimin_dial"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100sp" >

                <ImageView
                    android:id="@+id/duocihour_dial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/hour_dial" />

                <ImageView
                    android:id="@+id/duocihour_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/hour_progress"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/duocihour_progress_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/hour_progress_hand" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/duocisecond_dial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/second_dial" />

                <ImageView
                    android:id="@+id/duocisecond_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/second_progress"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/duocisecond_progress_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/second_progress_hand" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listjishi"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@id/clcokview"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/v5_bottom_bar_bg_light" >

        <TextView
            android:id="@+id/textwujici"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/v5_bottom_bar_bg_light"
            android:gravity="center"
            android:text="点击上方表盘开始计时!再次点击即可记录成绩"
            android:textColor="#777777"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/duocijishilist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:divider="#00000000" >
        </ListView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/v5_bottom_bar_bg_light" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical" >

        <!-- <Button
            android:id="@+id/time_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/startback"
            android:onClick="timeOut"
            android:text="暂停"
            android:textColor="@color/aliceblue" /> -->

        <Button
            android:id="@+id/match_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_marginLeft="10dp"
            android:background="@drawable/startback"
            android:onClick="matchAthlete"
            android:text="运动员成绩匹配" />
    </LinearLayout>

</RelativeLayout>