<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/athlete_headbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3D8BFF" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="成绩运动员匹配"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/match_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:onClick="matchBack"
            android:src="@drawable/btn_back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <com.scnu.swimmingtrainingsystem.view.SlideCutListView
            android:id="@+id/matchscore_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/base_list_divider_drawable"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" >
        </com.scnu.swimmingtrainingsystem.view.SlideCutListView>

        <com.scnu.swimmingtrainingsystem.view.DragListView
            android:id="@+id/matchName_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/base_list_divider_drawable"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" >
        </com.scnu.swimmingtrainingsystem.view.DragListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_match_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <Button
            android:id="@+id/match_done"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/startback"
            android:onClick="matchDone"
            android:text="保存并开始下一趟计时" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="@drawable/startback"
            android:onClick="finishTiming"
            android:text="结束并查看本轮计时" />
    </LinearLayout>

</LinearLayout>