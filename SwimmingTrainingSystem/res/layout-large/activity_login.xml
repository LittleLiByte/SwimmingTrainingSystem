<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray" >

    <com.scnu.swimmingtrainingsystem.view.EditTextWithDel
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="180dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="20dp"
        android:hint="请输入用户名"
        android:singleLine="true"
        android:textSize="30sp" />

    <com.scnu.swimmingtrainingsystem.view.EditTextWithDel
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="20dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="30sp" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_password"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg_register"
        android:onClick="onRegister"
        android:padding="20dp"
        android:text="快速注册"
        android:textColor="#fff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_password"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_login"
        android:onClick="onLogin"
        android:padding="20dp"
        android:text="立即登录"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv_password"
        android:layout_marginBottom="20dp"
        android:text="忘记密码？"
        android:textColor="#7D7D7D"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/setting_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/forget_password"
        android:layout_alignBottom="@+id/forget_password"
        android:layout_alignLeft="@+id/tv_password"
        android:text="设置服务器地址和端口"
        android:textColor="#7D7D7D"
        android:textSize="22sp" />

</RelativeLayout>