<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/scroe_headbar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#3D8BFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/scroe_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:onClick="back"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_query_score_pressed"
            android:hint="请选择日期进行查询"
            android:padding="7dp"
            android:textColor="@color/huise"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aliceblue"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="时间---计划详细"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:visibility="gone" />

    <ExpandableListView
        android:id="@+id/query_score_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/base_list_divider_drawable"
        android:groupIndicator="@null" >
    </ExpandableListView>

</LinearLayout>